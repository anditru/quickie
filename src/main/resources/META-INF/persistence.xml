<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="quickie">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>quickie.db.entities.AppProperty</class>
        <class>quickie.db.entities.RecipePage</class>
        <class>quickie.db.entities.Ingredient</class>
        <class>quickie.db.entities.IngredientUsage</class>
        <class>quickie.db.entities.IngredientUsageKey</class>
        <class>quickie.db.entities.Recipe</class>
        <class>quickie.db.entities.Step</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:./quickie.db" />
            <property name="hibernate.show_sql" value="true" />
            <property name="connection.pool_size" value="100" />
            <property name="format_sql" value="true" />
            <property name="hibernate.connection.charSet" value="UTF-8" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>
</persistence>